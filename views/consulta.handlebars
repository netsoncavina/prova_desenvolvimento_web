<div class="container text-center">
  <div class="column">
    
    <div class="col bg-primary">
      <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">SISTEMA PARA PROVA</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a
                class="nav-link active"
                aria-current="page"
                href="/"
              >Cadastrar</a>
              <a class="nav-link" href="/consulta">Consultar</a>
            </div>
          </div>
        </div>
      </nav>
    </div>
   
    <div class="col bg-white">
      <p>
        <div class="container text-center">
          <div class="row bg-primary">
            <div class="col text-light">
              Nome
            </div>
            <div class="col text-light">
              Idade
            </div>
            <div class="col text-light">
              Telefone
            </div>
            <div class="col text-light">
              Endereço
            </div>
            
            <div class="col text-light">
              Ações
            </div>
          </div>
          <div class="row">
            <div class="col text-light">
              &nbsp;
            </div>
            <div class="col text-light">
              &nbsp;
            </div>
            <div class="col text-light">
              &nbsp;
            </div>
            <div class="col text-light">
              &nbsp;
            </div>
            <div class="col text-light">
              &nbsp;
            </div>
            <div class="col text-light">
              &nbsp;
            </div>
          </div>
          {{#each cliente}}
            {{#dataValues}}
              <div class="row">
                <div class="col">
                  {{nome}}
                </div>
                <div class="col">
                  {{idade}}
                </div>
                <div class="col">
                  {{telefone}}
                </div>
                <div class="col">
                  {{endereco}}
                </div>

                <div class="col">
                  <button type="button" class="btn btn-primary mb-2"><a
                      href="/editar/{{id}}"
                      style="color:inherit"
                    >Editar</a></button>
                  <button type="button" class="btn btn-danger mb-2"><a
                      href="/excluir/{{id}}"
                      style="color:inherit"
                    >Excluir</a></button>
                </div>
              </div>
            {{/dataValues}}
          {{/each}}
        </div>
      </p>
    </div>
    <div class="col-1">
      &nbsp;
    </div>
  </div>
</div>